{
  "name": "volocene",
  "version": "1.0.0",
  "description": "A platform for stories about the state of the world",
  "main": "index.js",
  "scripts": {
    "build": "npm run site && npm run css && npm run js",
    "site": "metalsmith",
    "css": "postcss --config postcss.json",
    "js": "webpack --config webpack.json",
    "watch:css": "onchange src/**/*.css -- npm run build",
    "watch:js": "onchange src/**/*.js -- npm run js && npm run build",
    "watch": "npm run watch:css && npm run watch:css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iandenty/volocene"
  },
  "keywords": [
    "data-visualisation",
    "stories",
    "earth",
    "nature"
  ],
  "author": "Ian Denty",
  "license": "ISC",
  "dependencies": {
    "handlebars": "^4.0.6",
    "metalsmith": "^2.3.0",
    "metalsmith-collections": "^0.9.0",
    "metalsmith-drafts": "0.0.1",
    "metalsmith-layouts": "^1.8.0",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-path": "^0.2.0",
    "metalsmith-permalinks": "^0.5.0",
    "postcss": "^5.2.14",
    "postcss-custom-properties": "^5.0.2",
    "postcss-import": "^9.1.0",
    "postcss-nesting": "^2.3.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.3",
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-preset-es2015": "^6.22.0",
    "metalsmith-debug": "^1.1.0",
    "onchange": "^3.2.1",
    "postcss-cli": "^2.6.0",
    "postcss-csso": "^1.1.2",
    "webpack": "^2.2.1"
  }
}
